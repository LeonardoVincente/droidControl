<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.leonzky.droidcontrol.mainControl">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vol +"
        android:id="@+id/btnVolUp"
        android:layout_above="@+id/btnVolDown"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="63dp"
        android:onClick="changeVolUp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel +"
        android:id="@+id/btnChUp"
        android:layout_alignTop="@+id/btnVolUp"
        android:layout_alignStart="@+id/btnChDown"
        android:onClick="changeChUp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOL -"
        android:id="@+id/btnVolDown"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/btnVolUp"
        android:onClick="changeVolDown"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel -"
        android:id="@+id/btnChDown"
        android:layout_alignTop="@+id/btnVolDown"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:onClick="changeChDown"
        />

</RelativeLayout>
